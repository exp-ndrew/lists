<div id="add_list" class="reveal-modal tiny" data-reveal>
  <a class="close-reveal-modal">&#215;</a>
  <%= render 'add_list_form' %>
</div>

<div class="row">

  <div class="small-6 large-centered columns">
    <ul class="stack button-group">
          <li><a href="#" data-reveal-id="add_list" class="button alert">Add List</a></li>
      <% @lists.each do |list| %>
        <li>
          <a href="/lists/<%= list.id %>" class="button split"><%= list.name %><span data-dropdown="drop_<%= list.id %>"></span></a>
          <ul id="drop_<%= list.id %>" class="f-dropdown" data-dropdown-content>
            <li><a href="#">Edit List</a></li>
            <li><a href="/lists/<%= list.id %>" data-method="delete" data-confirm="Are you sure you want to delete <%= list.name %> and all its tasks?">Delete List</a></li>
          </ul>
        </li>
      <% end %>
    </ul>


  </div>
</div>